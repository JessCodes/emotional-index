<!DOCTYPE html>
<html>
  <head>
    <title>Emote Me</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <div class="nav-wrapper">
        <a href="/" class="brand-logo">Emote Me</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <% if logged_in? %>
            <li><%= link_to current_user.email, user_path(current_user), class: 'waves-effect waves-light' %></li>
            <li><%= link_to "Logout", logout_path, class: 'waves-effect waves-light' %></li>
          <% else %>
            <li><%= link_to "Login", login_path, class: 'waves-effect waves-light' %></li>
            <li><%= link_to "Sign Up", new_user_path, class: 'waves-effect waves-light' %></li>
          <% end %>
        </ul>
      </div>
    </nav>
    <br />
    <%= yield %>
  </body>
</html>
